<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="@dimen/padding_margin_10"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content">

        <TextView
            android:typeface="serif"
            android:ellipsize="end"
            android:lines="1"
            android:textSize="@dimen/textsize_20"
            android:id="@+id/restuarantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            tools:text="Restaurants Name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:typeface="serif"
            android:id="@+id/restuarantRateing"
            android:text="@string/_4_2_rating"
            android:textSize="@dimen/textsize_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RatingBar
            android:rating="4.5"
            android:id="@+id/restuantRatebar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="@dimen/width_height_80"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:padding="@dimen/radius_6dp" />

        <TextView
            android:typeface="serif"
            android:id="@+id/restuarantNumberofRaters"
            android:text="@string/_213"
            android:textSize="@dimen/textsize_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <TextView
        android:typeface="serif"
        android:ellipsize="end"
        android:lines="1"
        android:id="@+id/restuarantLocation"
        android:text="@string/location"
        android:textSize="@dimen/textsize_18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/restuarant_image"
        android:scaleType="centerCrop"
        android:layout_width="@dimen/width_height_80"
        app:srcCompat="@drawable/crestecrane"
        android:layout_height="@dimen/width_height_80"/>

</LinearLayout>