<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DetailsActivity">

    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/imageOfRestuarant"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>

    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/nameOfRestuarant"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageOfRestuarant"
        android:layout_width="wrap_content"
        android:text="Name of restuarant"
        android:layout_height="wrap_content"/>

    <View
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/nameOfRestuarant"
        android:layout_width="match_parent"
        android:background="@android:color/darker_gray"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/descriptionOfRestuarant"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameOfRestuarant"
        android:layout_width="match_parent"
        android:text="Description"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>